<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_menu">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:fontFamily">@font/baloo2semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="toolBarTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/baloo2medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/baloo2regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="hint_text_state_torunament_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/baloo2regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="stages_tournament_team_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/baloo2regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="shirt_imageView_dialog">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="shirt_select" parent="shirt_imageView_dialog">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="shirt_select_tournament" parent="shirt_imageView_dialog">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="shirt_stage_tournament" parent="shirt_imageView_dialog">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="inputText">
        <item name="android:layout_width">100dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/baloo2regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">10</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="tournament_tab_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">5sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/baloo2regular</item>
    </style>


</resources>