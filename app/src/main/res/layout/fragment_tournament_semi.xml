<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".modules.tournament.tournamentMatchsStages.stages.SemiTournamentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/matchCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stageCardView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:background="@color/green">

                    <TextView
                        android:id="@+id/textStageMatch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/hint_text_state_torunament_match"
                        android:text="@string/title_state_tournament_match_start"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stageTeamName11"
                        style="@style/stages_tournament_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_state_tournament_match_waiting"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/stageTeamShirt11"
                        style="@style/shirt_stage_tournament"
                        android:src="@drawable/shirt_select" />

                    <TextView
                        android:id="@+id/score11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/baloo2regular"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stageTeamName12"
                        style="@style/stages_tournament_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_state_tournament_match_waiting"
                        android:textColor="@color/white"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/stageTeamShirt12"
                        style="@style/shirt_stage_tournament"
                        android:src="@drawable/shirt_select" />

                    <TextView
                        android:id="@+id/score12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/baloo2regular"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/stageCardView2"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:background="@color/green">

                    <TextView
                        android:id="@+id/textStageMatch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/hint_text_state_torunament_match"
                        android:text="@string/title_state_tournament_match_start"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stageTeamName21"
                        style="@style/stages_tournament_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_state_tournament_match_waiting"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/stageTeamShirt21"
                        style="@style/shirt_stage_tournament"
                        android:src="@drawable/shirt_select" />

                    <TextView
                        android:id="@+id/score21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/baloo2regular"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="80dp"
                        android:layout_height="1dp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stageTeamName22"
                        style="@style/stages_tournament_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_state_tournament_match_waiting"
                        android:textColor="@color/white"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/stageTeamShirt22"
                        style="@style/shirt_stage_tournament"
                        android:src="@drawable/shirt_select" />

                    <TextView
                        android:id="@+id/score22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/baloo2regular"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@id/matchCard1"
        app:layout_constraintTop_toTopOf="@id/matchCard1"
        app:layout_constraintBottom_toBottomOf="@id/matchCard1"
        android:src="@drawable/track_stage"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>